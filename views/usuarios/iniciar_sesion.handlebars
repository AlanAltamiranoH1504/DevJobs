<main class="contenedor">
    <form method="post" action="/devjobs/inicio_sesion" class="default-form">
        <h3 class="text-center">Incia Sesión</h3>

        {{#if error}}
            <div class="bg-danger fw-bold text-uppercase text-center px-3 py-2 fs-2 text-white rounded mb-4">
                {{msg}}
            </div>
        {{/if}}

        <div class="campo">
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" placeholder="Ingresa tu emaill de usuario">
        </div>
        <div class="campo">
            <label for="password">Password: </label>
            <input type="password" name="password" id="password" placeholder="Ingresa tu password">
        </div>

        <div class="campo acciones">
            <a href="/devjobs/crear-cuenta">Crear Cuenta</a>
            <a href="/devjobs/olvide-password">Recuperar Password</a>
        </div>

        <div class="campo centrar-horizontal">
            <input type="submit" class="btn btn-azul" value="Iniciar Sesión">
        </div>
    </form>
</main>