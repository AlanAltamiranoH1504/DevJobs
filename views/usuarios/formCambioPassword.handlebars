<main class="contenedor">
    <form action="/devjobs/actualizacion-password" method="post" class="default-form">
        <h3 class="text-center">Actualiza tu Password</h3>
        <input type="hidden" name="email" id="email" value="{{email}}">

        <div class="campo">
            <label for="password">Password Nueva:</label>
            <input type="password" name="password" id="password" required placeholder="Password Nueva">
        </div>

        <div class="campo">
            <label for="confirmPassword">Confirma tu Password:</label>
            <input type="password" name="confirmPassword" id="confirmPassword" required placeholder="Confirma tu Password">
        </div>

        <div class="campo centrar-horizontal">
            <input type="submit" class="btn btn-azul" value="Reestablecer Password">
        </div>
    </form>
</main>