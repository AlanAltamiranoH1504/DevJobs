<main class="contenedor">
    <form class="default-form" action="/devjobs/vacantes/nueva" method="post">
        <h3>Informacion General </h3>
        <div class="campo">
            <label for="titulo">Titulo Vacante:</label>
            <input type="text" name="titulo" id="titulo" placeholder="Titulo de la vacante" required>
        </div>
        <div class="campo">
            <label>Empresa:</label>
            <input type="text" name="empresa" id="empresa" placeholder="Empresa reclutadora" required>
        </div>
        <div class="campo">
            <label for="ubicacion">Ubicacion:</label>
            <input type="text" name="ubicacion" id="ubicacion" placeholder="Ubicación" required>
        </div>
        <div class="campo">
            <label for="salario">Salario (MX):</label>
            <input type="text" name="salario" id="salario" placeholder="Salario de vacante" required>
        </div>
        <div class="campo">
            <label>Contrato</label>
            <select name="contrato">
                <option value="">--- Selecciona una opcion ---</option>
                <option value="Freelance">Freelance</option>
                <option value="Completo">Tiempo Completo</option>
                <option value="Medio">Medio Tiempo</option>
                <option value="Proyecto">Por Proyecto</option>
            </select>
        </div>
        <h3>Descripción del Puesto</h3>
        <div class="campo descripcion">
            <label for="descripcion">Descripción del Puesto: </label>
            <input type="hidden" id="x" name="descripcion">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <div style="gap: 5px">
            <label>HTML 5</label>
            <input type="checkbox" name="skils[]" value="html">

            <label>CSS 3</label>
            <input type="checkbox" name="skils[]" value="css3">

            <label>CSS GRID</label>
            <input type="checkbox" name="skils[]" value="css-grid">

            <label>FLEXBOX</label>
            <input type="checkbox" name="skils[]" value="flexbox">

            <label>JavaScript</label>
            <input type="checkbox" name="skils[]" value="javascript">

            <label>JQUERY</label>
            <input type="checkbox" name="skils[]" value="jquery">

            <label>VueJs</label>
            <input type="checkbox" name="skils[]" value="vuejs">

            <label>ReactJS</label>
            <input type="checkbox" name="skils[]" value="reactjs">

            <label>Redux</label>
            <input type="checkbox" name="skils[]" value="redux">

            <label>Apollo</label>
            <input type="checkbox" name="skils[]" value="apollo">

            <label>TypeScript</label>
            <input type="checkbox" name="skils[]" value="typeScript">

            <label>PHP</label>
            <input type="checkbox" name="skils[]" value="php">

            <label>Laravel</label>
            <input type="checkbox" name="skils[]" value="laravel">

            <label>Symfony</label>
            <input type="checkbox" name="skils[]" value="symfony">

            <label>Python</label>
            <input type="checkbox" name="skils[]" value="python">

            <label>Django</label>
            <input type="checkbox" name="skils[]" value="django">

            <label>ORM</label>
            <input type="checkbox" name="skils[]" value="orm">

            <label>Sequelize</label>
            <input type="checkbox" name="skils[]" value="sequelize">

            <label>Mongoose</label>
            <input type="checkbox" name="skils[]" value="mongoose">

            <label>SQL</label>
            <input type="checkbox" name="skils[]" value="sql">

            <label>MVC</label>
            <input type="checkbox" name="skils[]" value="mvc">

            <label>SASS</label>
            <input type="checkbox" name="skils[]" value="sass">

            <label>WordPress</label>
            <input type="checkbox" name="skils[]" value="wordpress">

        </div>
        <div class="campo centrar-horizontal">
            <input type="submit" value="Agregar Vacante" class="btn btn-azul">
        </div>
    </form>
</main>